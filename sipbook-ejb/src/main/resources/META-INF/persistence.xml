<persistence 
   xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
  <persistence-unit name="SipbookDB" transaction-type="JTA">
    <jta-data-source>java:/SipbookDS</jta-data-source>
    <properties>
      <property name="jboss.entity.manager.jndi.name" value="java:/SipbookDatabase"/>
      <property name="jboss.entity.manager.factory.jndi.name" value="java:/SipbookDatabaseFactory"/>	
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>
</persistence>
